<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangyakun.androidtool.activity.AudioManagerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="opensettting"
        android:text="变大" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openFlexBox"
        android:text="变小" />


   <EditText
       android:id="@+id/et_hour"
       android:hint="小时"
       android:inputType="number"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_mines"
        android:hint="分钟"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_put_close"
        android:onClick="onClose"
        android:text="设置自动关机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_put_open"
        android:onClick="onOpen"
        android:text="设置自动开机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_clear"
        android:onClick="onCear"
        android:text="清理数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
