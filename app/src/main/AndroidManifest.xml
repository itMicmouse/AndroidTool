<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yangyakun.androidtool">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <!-- 外部存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:name=".app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!-- <category android:name="android.intent.category.HOME"/> -->
                <!-- <category android:name="android.intent.category.DEFAULT"/> -->
            </intent-filter>
        </activity>
        <activity android:name=".activity.FlexboxActivity" />
        <activity android:name=".activity.RecycleViewActivity" />
        <activity android:name=".activity.MonitorActivity" />
        <activity android:name=".activity.RecycleViewDoubleActivity" />
        <activity android:name=".activity.NEtTestActivity" />
        <activity android:name=".activity.MdnsActivity" />
        <activity android:name=".activity.AudioManagerActivity" />
        <activity android:name=".activity.DbRealmActivity"/>

        <service android:name=".service.CountService" />
        <service android:name=".service.RealmCountService" />
        <service android:name=".service.WCDBService" />

        <activity android:name=".activity.DBActivity" />

        <activity android:name=".activity.WCDBActivity"/>

        <receiver android:name=".recycleview.UsbBroadcastReceiver">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_MOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
        </receiver>

        <activity android:name=".activity.TracerouteActivity" />
        <activity android:name=".activity.TracerouteLinuxActivity" />
        <activity android:name=".activity.EmailActivity"></activity>
        <activity android:name=".activity.WifiSetting"/>
        <activity android:name=".file.FileActivity"/>
    </application>

</manifest>